pipeline {
    agent any 
    stages {
        stage("Build") {
            steps {
                echo "Building..."
            }
            post {
                success {
                    mail to: "joe5763481@gmail.com",
                    subject: "Build Status Email",
                    body: "Build was successful!"
                }
            }
        }
        stage ("test") {
            steps {
                echo "testing stage..."
            }
        }
        stage ("deploy") {
            steps {
                echo "deploying... "
            }
        }
        stage ("complete") {
            steps {
                echo "pipeline completed!"
            }
        }
    }
}
